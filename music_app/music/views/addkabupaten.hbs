{{> header}}

{{#if message}}
<div class="alert alert-{{message.type}}" role="alert">
  {{message.message}}
</div>
{{/if}}

{{> navbar}}
  <div class="container pt-5">
    <form action="/addkabupaten" method="post" enctype="multipart/form-data">
        
        <div class="row auth-register">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <input name="nama" type="text" placeholder="nama">
            </div>
            <div class="col-md-2"></div>
        </div>
         <div class="row auth-register">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <input name="diresmikan" type="date" placeholder="diresmikan">
            </div>
           </div>
            <div class="row auth-register">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <input name="Provinsi_id" type="text" placeholder="Provinsi_id">
            </div>
           </div>
        
        <div class="row auth-register">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="file-input-group">
                    <label for="file">Cover_music<img src="/public/icon/attach.svg" alt=""></label>
                    <input name="photo" type="file" id="file" onchange="handlechange()" hidden>
                </div>
                <div id ="cover"></div>
            </div>
            <div class="col-md-2"></div>
        </div>
        <div class="row auth-register">
            <div class="col-md-2"></div>
            <div class="col-md-8 text-end">
                <button type="submit" class="btn-register">Submit</button>
            </div>
            <div class="col-md-2"></div>
        </div>
    </form>
</div>
<script>
     
     function handlechange() {
         const previewElement= document.getElementById('cover');
         const value = URL.createObjectURL(event.target.files[0]);
         previewElement.innerHTML = `<img src="${value}" style="width:250px;" class=" mt-3"/>`
     }
</script>


{{> footer}}
